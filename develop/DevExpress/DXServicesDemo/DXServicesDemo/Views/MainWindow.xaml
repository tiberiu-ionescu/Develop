<dx:ThemedWindow x:Class="DXServicesDemo.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                 xmlns:local="clr-namespace:DXServicesDemo"
                 DataContext="{dxmvvm:ViewModelSource Type={x:Type local:MainVM}}"
                 Title="MainWindow" Height="350" Width="525">
    
    <StackPanel>
        <Button Content="MessageBox" Command="{Binding MessageCommand}"/>
        <Button Content="Dialog" Command="{Binding DialogCommand}"/>
        <Button Content="Document" Command="{Binding DocumentCommand}"/>
    </StackPanel>
</dx:ThemedWindow>